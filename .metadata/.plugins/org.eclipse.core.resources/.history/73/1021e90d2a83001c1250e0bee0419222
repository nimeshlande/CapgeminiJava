package capgemini.java;
import java.util.Scanner;


public class Array{
	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter your number");
		
		
		int num =sc.nextInt();
		int arr[] = new int[num];
		
		System.out.println("Enter "+num+" element");
		
		for (int i = 0;i<=num;i++) {
			arr[i] = sc.nextInt();
		}
		
		
		int largest = arr[0];
		int smallest =arr[0];
		
		for(int i=0;i<num;i++) {
			if(arr[i]>arr[0]) {
				largest = arr[i];
				return;
				
			}
			if(arr[i]<arr[0]) {
				smallest=arr[i];
				return;
			}
		}
		
		System.out.println("Largest Number is "+largest+" and Smallest number is "+smallest);
	}
}
